---
// src/components/Header.astro

/**
 * Site Header Component
 * Ato Store Documentationのグローバルナビゲーションを担当します。
 * Starlightのデフォルトヘッダーを置き換えて使用します。
 */

import { ShoppingBag } from 'lucide-astro';

// 現在のパスを取得してアクティブ状態を判定
const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <div class="site-header-inner">
    <!-- Left Section: Logo & Main Nav -->
    <div class="site-header-left">
      <a href="/" class="site-logo">
        <img src="/favicon.svg" width="28" height="28" alt="Ato Logo">
        <span>Ato</span>
      </a>

    </div>

    <!-- Right Section: Store Button -->
    <div class="site-header-right">
      <a href="https://store.ato.run" class="btn-store">
        <ShoppingBag size={16} />
        Store
      </a>
    </div>
  </div>
</header>

<style>
  /* ========================================
     HEADER CONTAINER
     ======================================== */
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: 64px;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(250, 250, 250, 0.9);
    border-bottom: 1px solid var(--border);
  }

  .site-header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* ========================================
     LEFT SECTION (Logo + Nav)
     ======================================== */
  .site-header-left {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  /* Logo */
  .site-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--fg);
    text-decoration: none;
    transition: opacity 0.15s ease;
  }

  .site-logo:hover {
    opacity: 0.8;
  }

  .site-logo svg,
  .site-logo img {
    flex-shrink: 0;
  }

  /* Main Navigation */
  .site-nav {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .nav-link {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--fg-secondary);
    text-decoration: none;
    transition: color 0.15s ease;
    position: relative;
  }

  .nav-link:hover {
    color: var(--fg);
  }

  .nav-link.active {
    color: var(--fg);
    font-weight: 600;
  }

  /* Active indicator underline (optional enhancement) */
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--bg-strong);
    border-radius: 1px;
  }

  /* ========================================
     RIGHT SECTION (Auth Buttons)
     ======================================== */
  .site-header-right {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .btn-signin {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--fg-secondary);
    text-decoration: none;
    padding: 6px 12px;
    border-radius: 6px;
    transition: all 0.15s ease;
  }

  .btn-signin:hover {
    color: var(--fg);
    background: var(--bg-elevated);
  }

  .btn-publish {
    background: var(--bg-strong);
    color: var(--text-inverse);
    font-size: 0.875rem;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s ease;
    border: none;
    cursor: pointer;
  }

  .btn-publish:hover {
    background: #262626;
  }

  .btn-store {
    display: flex;
    align-items: center;
    gap: 6px;
    background: black;
    color: var(--text-inverse);
    font-size: 0.875rem;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.15s ease;
    border: none;
    cursor: pointer;
  }

  .btn-store:hover {
    background: #333;
  }

  /* ========================================
     RESPONSIVE STYLES
     ======================================== */
  
  /* Tablet and below */
  @media (max-width: 768px) {
    .site-nav {
      display: none; /* Hide main nav on mobile */
    }
    
    .site-header-left {
      gap: 16px;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .site-header-inner {
      padding: 0 16px;
    }

    .btn-signin {
      display: none; /* Hide sign in text on very small screens */
    }
  }
</style>